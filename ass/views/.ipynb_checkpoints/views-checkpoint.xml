<odoo>
  <data>
        <!-- records for the ticket number as a sequence -->
     <record model="ir.ui.view" id="ctr_list">
      <field name="name">ctr.list</field>
      <field name="model">helpdesk.ticket</field>
      <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form" />
      <field name="arch" type="xml">
        <field name="team_id" position="before">
          <field name="sequence" readonly="1"/>
        </field>
      </field>
    </record>
      <record model="ir.ui.view" id="ctr_title">
      <field name="name">ctr.list</field>
      <field name="model">helpdesk.ticket</field>
      <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form" />
      <field name="arch" type="xml">
        <field name="partner_id" position="before">
            <h2>Informations Partenaire</h2>
        </field>
      </field>
    </record>
