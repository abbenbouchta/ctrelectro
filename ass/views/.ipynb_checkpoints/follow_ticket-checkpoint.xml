<odoo>
    <data>
        <record model="ir.ui.view" id="sav_autre">
      <field name="name">ctr.list</field>
      <field name="model">helpdesk.ticket</field>
      <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form" />
      <field name="arch" type="xml">
          <field name="description" position="before">
              <notebook>
                  <page string="Autre informations">
                      <group>
                          <group>
                              <separator colspan="2" string="Informations Client" />
                              <field name="cust"/>
                              <field name="phone"/>
                              <field name="client_street"/>
                          </group>
                          <group>
                              <separator colspan="2" string="Informations Demandeur" />
                              <field name="applicant_name" />
                              <field name="applicant_phone" />                        
                          </group>
                          <group>
                              <separator colspan="2" string="Informations Revendeur" />
                              <field name="dealer_name"  />
                              <field name="dealer_phone" />                       
                          </group>
                      </group>
                  </page>
                  <page string="Suivi">
                          <field name="follow_ids">
                              <tree editable="bottom">
                                  <field name="follow_date" />
                                  <field name="follow_description" />
                              </tree>
                          </field>
                  </page>
              </notebook>
          </field>
      </field>
    </record>
    </data>
</odoo>