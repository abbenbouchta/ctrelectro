<odoo>
  <data>

     <record model="ir.ui.view" id="ctr_list">
      <field name="name">ctr.list</field>
      <field name="model">helpdesk.ticket</field>
      <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form" />
      <field name="arch" type="xml">
        <field name="team_id" position="before">
          <field name="sequence" readonly="1"/>
          <field name="cust"/>
          <field name="phone"/>
          <field name="product"/>
          <field name="mark"/>
        </field>
      </field>
    </record>
    <record model="ir.ui.view" id="ctr_list1">
      <field name="name">ctr.list</field>
      <field name="model">helpdesk.ticket</field>
      <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form" />
      <field name="arch" type="xml">
        <field name="tag_ids" position="after">
          
                      <h2>Informations Partenaire</h2>
                      <field name="cust"/>
                      <field name="phone"/>
        </field>
      </field>
    </record>
    <!-- This record is for adding the number of ticket in the tree view -->
    <record model="ir.ui.view" id="ctr_tree_view">
      <field name="name">ctr.search</field>
      <field name="model">helpdesk.ticket</field>
      <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_tree" />
      <field name="arch" type="xml">
          <tree>
            <field name="sequence"/>
          </tree>
      </field>
    </record>
    <!-- This record is for seaching for tickets using the number of ticket -->
    <record model="ir.ui.view" id="ctr_search_view">
      <field name="name">ctr.search</field>
      <field name="model">helpdesk.ticket</field>
      <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_search" />
      <field name="arch" type="xml">
        <search>
          <field name="sequence"/>
        </search>
      </field>
    </record>

  </data>
</odoo>